{
    "name": "angular-lsp",
    "description": "Angular LSP",
    "version": "1.0.0",
    "author": {
        "name": "andrius-pra"
    },
    "lspServers": {
        "typescript": {
            "command": "node",
            "args": ["${CLAUDE_PLUGIN_ROOT}/lsp-proxy.mjs"],
            "extensionToLanguage": {
                ".ts": "typescript",
                ".tsx": "typescriptreact",
                ".js": "javascript",
                ".jsx": "javascriptreact",
                ".mts": "typescript",
                ".cts": "typescript",
                ".mjs": "javascript",
                ".cjs": "javascript"
            }
        }
    }
}